<h1>Editer un blog</h1>


<%= form_for @blog do |f| %>

    <div>

      <label>Titre du blog</label>

      <%= f.text_field :title %>
    </div><br>

    <div>

      <label>Contenu du blog</label>

      <%= f.text_field :content %>
    </div><br>

    <div>
      <button type="submit">Modifier le blog</button>
    </div>

<% end %>
